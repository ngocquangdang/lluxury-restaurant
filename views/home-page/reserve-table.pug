section.container-fluid.reserve-table
    .heading
        h3.title reserve your table
    .reserve-content.container
        img(src="../map.png", alt="")
        .request-table
            form(action="")
                .input-group
                    input(type="text" id="name" required)
                    label(for="name") name*
                    i.far.fa-user
                .input-group
                    input(type="text" id="date" required)
                    label(for="date") date*
                    i.far.fa-user
                .input-group
                    input(type="text" id="time" required)
                    label(for="time") time*
                    i.far.fa-user
                .input-group
                    input(type="text" id="email-address" required)
                    label(for="email-address") email address*
                    i.far.fa-user
                .input-group
                    input(type="text" id="guests" required)
                    label(for="guests") guests* 
                    i.far.fa-user
                .input-group
                    input(type="text" id="phone-number" required)
                    label(for="phonenumber") phone number*
                    i.far.fa-user
            .submit-contact
                button(type="submit") make reservation
                .info
                    .name
                        p home
                        p delivary
                    .phone
                        p + 12345678

